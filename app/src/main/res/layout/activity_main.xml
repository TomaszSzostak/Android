<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="738dp"
            android:layout_height="408dp"

            tools:srcCompat="@tools:sample/avatars" />
    </TableRow>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="800dp"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1"
                android:layout_width="64dp"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="340dp"
                android:layout_marginBottom="0dp"
                android:backgroundTint="@color/guziki"
                android:onClick="Lewo"
                android:text="L"
                android:textColor="@color/guziki_tekst"
                android:textSize="22sp" />

            <Space
                android:layout_width="4sp"
                android:layout_height="wrap_content"
                android:layout_weight="0" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="64dp"
                android:layout_height="48dp"
                android:layout_marginTop="340dp"
                android:backgroundTint="@color/guziki"
                android:onClick="GoraLufa"
                android:text="U"
                android:textColor="@color/guziki_tekst"
                android:textSize="22sp" />

            <Space
                android:layout_width="4sp"
                android:layout_height="wrap_content"
                android:layout_weight="0" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="64dp"
                android:layout_height="48dp"
                android:layout_marginTop="340dp"
                android:backgroundTint="@color/guziki"
                android:onClick="SilaMinus"
                android:text="-"
                android:textColor="@color/guziki_tekst"
                android:textSize="22sp" />

            <Space
                android:layout_width="16sp"
                android:layout_height="wrap_content"
                android:layout_weight="0" />

            <LinearLayout
                android:layout_width="261dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="340dp"
                    android:backgroundTint="@color/guziki"
                    android:onClick="Strzal"
                    android:text="SHOT"
                    android:textColor="@color/guziki_tekst"
                    android:textSize="18sp" />

            </LinearLayout>

            <Space
                android:layout_width="16sp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="64dp"
                android:layout_height="48dp"
                android:layout_marginTop="340dp"
                android:backgroundTint="@color/guziki"
                android:onClick="SilaPlus"
                android:text="+"
                android:textColor="@color/guziki_tekst"
                android:textSize="22sp" />

            <Space
                android:layout_width="4sp"
                android:layout_height="wrap_content"
                android:layout_weight="0" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="64dp"
                android:layout_height="48dp"
                android:layout_marginTop="340dp"
                android:backgroundTint="@color/guziki"
                android:onClick="DolLufa"
                android:text="D"
                android:textColor="@color/guziki_tekst"
                android:textSize="22sp" />

            <Space
                android:layout_width="4sp"
                android:layout_height="wrap_content"
                android:layout_weight="0" />

            <Button
                android:id="@+id/btn7"
                android:layout_width="66dp"
                android:layout_height="48dp"
                android:layout_marginTop="340dp"
                android:backgroundTint="@color/guziki"
                android:onClick="Prawo"
                android:text="R"
                android:textColor="@color/guziki_tekst"
                android:textSize="22sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>